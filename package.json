{
  "name": "chatbot-desktop",
  "version": "0.1.0",
  "description": "Hotkey-toggled Gemini chatbot for Windows (Electron)",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "mime": "^4.0.7"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.chatbot",
    "productName": "Chatbot",
    "files": [
      "electron/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
